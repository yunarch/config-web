{
  "$schema": "https://json.schemastore.org/package",
  "version": "0.0.0",
  "name": "@yunarch/config-web",
  "description": "Shared configurations for web projects.",
  "keywords": [
    "config",
    "eslint",
    "oxlint",
    "prettier",
    "biome",
    "typescript",
    "tooling"
  ],
  "author": {
    "name": "Adrian Lopez Gonzalez",
    "url": "https://github.com/yunarch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yunarch/config-web"
  },
  "bugs": {
    "url": "https://github.com/yunarch/config-web/issues"
  },
  "engines": {
    "bun": ">=1",
    "node": ">=22"
  },
  "files": ["README.md", "LICENSE.md", "dist"],
  "bin": {
    "swagger-sync": "./dist/cli/swagger-sync.js",
    "turbo-select": "./dist/cli/turbo-select.js"
  },
  "exports": {
    ".": "./dist/index.js",
    "./formatter-prettier": "./dist/formatters/prettier.config.js",
    "./formatter-biome": "./dist/formatters/biome.config.json",
    "./linter-eslint": "./dist/linters/eslint.config.js",
    "./linter-oxlint": "./dist/linters/oxlint.config.json",
    "./tsconfig-base": "./dist/ts/tsconfig-base.json",
    "./reset.d.ts": "./dist/ts/reset.d.ts"
  },
  "type": "module",
  "scripts": {
    "postinstall": "husky && bun run eslint:typegen",
    "lint": "eslint .",
    "lint:ts": "tsc --noEmit",
    "clean": "rimraf dist",
    "build": "bun run eslint:typegen && tsup",
    "eslint:typegen": "bun run ./src/linters/eslint/scripts/typegen.ts",
    "eslint:inspect": "bunx @eslint/config-inspector --config eslint.config.ts"
  },
  "peerDependencies": {
    "@biomejs/biome": "1",
    "prettier": "3",
    "oxlint": "0.16.1"
  },
  "peerDependenciesMeta": {
    "@biomejs/biome": {
      "optional": true
    },
    "prettier": {
      "optional": true
    },
    "oxlint": {
      "optional": true
    }
  },
  "dependencies": {
    "@eslint/js": "9.22.0",
    "@inquirer/confirm": "5.1.8",
    "@inquirer/select": "4.1.0",
    "@total-typescript/ts-reset": "0.6.1",
    "commander": "13.1.0",
    "eslint-config-flat-gitignore": "2.1.0",
    "eslint-flat-config-utils": "2.0.1",
    "eslint-plugin-oxlint": "0.16.1",
    "globals": "16.0.0",
    "ora": "8.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@biomejs/biome": "1.9.4",
    "@types/node": "22.13.10",
    "eslint": "9.22.0",
    "eslint-typegen": "2.1.0",
    "husky": "9.1.7",
    "prettier": "3.5.3",
    "oxlint": "0.16.1",
    "rimraf": "6.0.1",
    "tsup": "8.4.0",
    "typescript": "5.8.2"
  },
  "packageManager": "bun@1.2.5"
}
