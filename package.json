{
  "$schema": "https://json.schemastore.org/package",
  "version": "0.0.0",
  "name": "@yunarch/config-web",
  "description": "Shared configurations for web projects.",
  "keywords": [
    "config",
    "eslint",
    "oxlint",
    "prettier",
    "biome",
    "typescript",
    "tooling"
  ],
  "author": {
    "name": "Adrian Lopez Gonzalez",
    "url": "https://github.com/yunarch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yunarch/config-web"
  },
  "bugs": {
    "url": "https://github.com/yunarch/config-web/issues"
  },
  "engines": {
    "bun": ">=1",
    "node": ">=22"
  },
  "sideEffects": false,
  "files": ["README.md", "LICENSE.md", "dist"],
  "bin": {
    "openapi-sync": "./dist/cli/openapi-sync/index.js",
    "turbo-select": "./dist/cli/turbo-select/index.js"
  },
  "exports": {
    ".": "./dist/index.js",
    "./prettier": "./dist/formatters/prettier.config.js",
    "./eslint": "./dist/linters/eslint.config.js",
    "./oxlint": "./dist/linters/oxlint.config.json",
    "./biome-formatter": "./dist/formatters/biome.config.json",
    "./tsconfig-base": "./dist/ts/tsconfig-base.json",
    "./reset.d.ts": "./dist/ts/reset.d.ts"
  },
  "type": "module",
  "scripts": {
    "postinstall": "husky && bun run eslint:typegen",
    "format": "biome format && prettier \"**/*.{html,md,yaml,yml}\" --check",
    "format:all": "biome format --write && prettier \"**/*.{html,md,yaml,yml}\" --write",
    "clean": "rimraf dist coverage .turbo",
    "eslint:typegen": "bun run ./src/eslint/scripts/typegen.ts",
    "eslint:inspect": "bunx @eslint/config-inspector --config eslint.config.ts",
    "lint:code": "eslint .",
    "lint:ts": "tsc --noEmit",
    "test": "vitest --typecheck run",
    "test:watch": "vitest --typecheck watch",
    "build": "bun run eslint:typegen && tsup",
    "lint": "turbo run lint:code lint:ts",
    "release": "turbo run build && bun publish --dry-run && bunx bumpp && bun publish"
  },
  "peerDependencies": {
    "@biomejs/biome": ">= 1 || < 2",
    "prettier": ">= 3 || < 4",
    "eslint": ">=9.5.0 || < 10",
    "oxlint": ">=0.16.2 || < 1"
  },
  "peerDependenciesMeta": {
    "@biomejs/biome": {
      "optional": true
    },
    "prettier": {
      "optional": true
    },
    "eslint": {
      "optional": true
    },
    "oxlint": {
      "optional": true
    }
  },
  "dependencies": {
    "commander": "13.1.0",
    "ora": "8.2.0",
    "@inquirer/confirm": "5.1.9",
    "@inquirer/select": "4.2.0",
    "@total-typescript/ts-reset": "0.6.1",
    "globals": "16.0.0",
    "eslint-flat-config-utils": "2.0.1",
    "eslint-config-flat-gitignore": "2.1.0",
    "eslint-import-resolver-typescript": "4.3.4",
    "@eslint/js": "9.25.1",
    "typescript-eslint": "8.31.0",
    "eslint-plugin-unicorn": "58.0.0",
    "eslint-plugin-perfectionist": "4.12.3",
    "eslint-plugin-import-x": "4.11.0",
    "eslint-plugin-unused-imports": "4.1.4",
    "eslint-plugin-jsdoc": "50.6.10",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-oxlint": "0.16.7",
    "@vitest/eslint-plugin": "1.1.43",
    "@tanstack/eslint-plugin-query": "5.73.3",
    "@tanstack/eslint-plugin-router": "1.115.0",
    "@eslint-react/eslint-plugin": "1.48.4",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.20"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "prettier": "3.5.3",
    "@biomejs/biome": "1.9.4",
    "eslint": "9.25.1",
    "eslint-typegen": "2.1.0",
    "oxlint": "0.16.7",
    "husky": "9.1.7",
    "lint-staged": "15.5.1",
    "rimraf": "6.0.1",
    "tsup": "8.4.0",
    "turbo": "2.5.1",
    "typescript": "5.8.3",
    "vitest": "3.1.2",
    "@types/node": "22.15.2"
  },
  "packageManager": "bun@1.2.10"
}
